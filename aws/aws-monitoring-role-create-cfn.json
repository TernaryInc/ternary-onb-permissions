{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "TernaryCMPMonitoringAgentRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "TernaryCMPMonitoringAgentAssumeRole",
                            "Effect": "Allow",
                            "Principal": {
                                "AWS": "638468855455"
                            },
                            "Action": "sts:AssumeRole",
                            "Condition": {
                                "StringEquals": {
                                    "sts:ExternalId": {
                                        "Ref": "ExternalIdParameter"
                                    }
                                }
                            }
                        }
                    ]
                },
                "Description": "Permissions for Ternary to access your cloud for cost insights",
                "Policies": [
                    {
                        "PolicyName": "TernaryCMPMonitoringAgentPolicy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Sid": "AccountAccess",
                                    "Effect": "Allow",
                                    "Action": [
                                        "cloudwatch:ListTagsForResource",
                                        "cloudwatch:ListMetrics",
                                        "cloudwatch:ListMetricStreams",
                                        "cloudwatch:GetMetricStatistics",
                                        "cloudwatch:GetMetricData"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ],
                "RoleName": "TernaryCMPMonitoringAgent"
            }
        }
    },
    "Parameters": {
        "ExternalIdParameter": {
            "Type": "String",
            "Description": "Random string generated by Ternary. E.g. B54FCCD2-21E0-40A7-B286-7EA3412B10BE"
        }
    }
}
