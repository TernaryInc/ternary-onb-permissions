{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "TernaryCMPMonitoringAgentRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "TernaryCMPMonitoringAgentAssumeRole",
                            "Effect": "Allow",
                            "Principal": {
                                "Federated": "accounts.google.com"
                            },
                            "Action": "sts:AssumeRoleWithWebIdentity",
                            "Condition": {
                                "StringEquals": {
                                    "accounts.google.com:aud": {
                                        "Ref": "ServiceAccountUniqueIDParameter"
                                    },
                                    "accounts.google.com:oaud": {
                                        "Ref": "ServiceAccountParameter"
                                    },
                                    "accounts.google.com:sub": {
                                        "Ref": "ServiceAccountUniqueIDParameter"
                                    }
                                },
                                "Null": {
                                    "accounts.google.com:aud": "false",
                                    "accounts.google.com:oaud": "false"
                                }
                            }
                        }
                    ]
                },
                "Description": "Permissions for Ternary to access your cloud for cost insights",
                "Policies": [
                    {
                        "PolicyName": "TernaryCMPMonitoringAgentPolicy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Sid": "AccountAccess",
                                    "Effect": "Allow",
                                    "Action": [
                                        "cloudwatch:ListTagsForResource",
                                        "cloudwatch:ListMetrics",
                                        "cloudwatch:ListMetricStreams",
                                        "cloudwatch:GetMetricStatistics",
                                        "cloudwatch:GetMetricData"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ],
                "RoleName": "TernaryCMPMonitoringAgent"
            }
        }
    },
    "Parameters": {
        "ServiceAccountParameter": {
            "Type": "String",
            "Description": "Ternary tenant Service Account email"
        },
        "ServiceAccountUniqueIDParameter": {
            "Type": "String",
            "Description": "Unique user id generated by Google."
        }
    }
}
